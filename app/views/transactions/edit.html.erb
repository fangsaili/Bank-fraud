<h1>Edit Transaction</h1>

<%= form_for@transaction do |f| %>

  <p>
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.label :balance %><br>
    <%= f.text_field :balance %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back',admin_path(@account) %>
