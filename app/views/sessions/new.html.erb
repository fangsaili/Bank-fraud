        var ranl = 0;
        var useRand = 0;
        images = new Array;
        images[1] = new Image();
        images[1].src = "https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=4130593946,1518582857&fm=26&gp=0.jpg";
